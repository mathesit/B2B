<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp">
            <TextView
                android:singleLine="true"
                android:id="@+id/closeNewCase"
                android:textSize="@dimen/textsize_large_less"
                android:textColor="@color/blue_txt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="CANCEL"/>
            <TextView
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="NEW CASE"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_large"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_large_less"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="CASE DETAILS"
                android:textStyle="bold"/>
            <TextView
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue_txt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ NEW LOG"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_large_less"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#7e7d7d"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Case ID :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E7E7E7"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="10dp">
                <TextView
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Case Status :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Created On :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E7E7E7"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="10dp">
                <TextView
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Created By :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Consumer Name :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E7E7E7"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="10dp">
                <TextView
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Call Category :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Contact No :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E7E7E7"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="10dp">
                <TextView
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/textsize_normal_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Email :"/>
                <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_weight=".8"
                    android:textSize="@dimen/textsize_large_less"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E7E7E7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_large"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="CASE LOGS"
                android:textStyle="bold"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#7e7d7d"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
</ScrollView>