<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEC0C2">

    <include android:id="@+id/titleBarMain"
        layout="@layout/titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b2b_bg"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.85">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:id="@+id/linear1InMain"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/menubg"
                            android:onClick="showDashboard">
                            <ImageView
                                android:id="@+id/imgDashboardInMain"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/dashboard"/>
                            <TextView
                                android:id="@+id/txtDashboardInMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dashboard"
                                android:textColor="@color/gray_txt"
                                android:textSize="@dimen/textsize_normal_less"
                                android:gravity="top|center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear2InMain"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/linear1InMain"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:onClick="showServReq"
                            android:background="@drawable/menubg">
                            <ImageView
                                android:id="@+id/imgServReqInMain"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/servicereq"/>
                            <TextView
                                android:id="@+id/txtServReqInMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/service_request"
                                android:textColor="@color/gray_txt"
                                android:textSize="@dimen/textsize_normal_less"
                                android:gravity="top|center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear3InMain"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/linear2InMain"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:onClick="showJobs"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/menubg">
                            <ImageView
                                android:id="@+id/imgJobsInMain"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/jobs"/>
                            <TextView
                                android:id="@+id/txtJobsInMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/jobs"
                                android:textColor="@color/gray_txt"
                                android:textSize="@dimen/textsize_normal_less"
                                android:gravity="top|center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear4InMain"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/linear3InMain"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:onClick="showQuotation"
                            android:background="@drawable/menubg">
                            <ImageView
                                android:id="@+id/imgQuotationsInMain"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/quotations"/>
                            <TextView
                                android:id="@+id/txtQuotationsInMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/quotations"
                                android:textColor="@color/gray_txt"
                                android:textSize="@dimen/textsize_normal_less"
                                android:gravity="top|center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear5InMain"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/linear4InMain"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:onClick="showReports"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/menubg">
                            <ImageView
                                android:id="@+id/imgReportsInMain"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/reports"/>
                            <TextView
                                android:id="@+id/txtReportsInMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/reports"
                                android:textSize="@dimen/textsize_normal_less"
                                android:gravity="top|center_horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearFragmentInMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.15"
                android:layout_marginTop="20dp">
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>