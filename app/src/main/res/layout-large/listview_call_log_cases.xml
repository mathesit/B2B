<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.10">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Case Id"
                    android:id="@+id/txtewCLCaseId"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#898989"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.90"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Caller Name"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtewCLName"
                    />
                <TextView
                    android:drawableLeft="@drawable/phone_no"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Caller Number"
                    android:gravity="center_vertical"
                    android:id="@+id/txtewCLnum"
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#898989"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.90"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Created By"
                    android:gravity="center_vertical"
                    android:id="@+id/txtewCLcreatedbyname"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:drawableLeft="@drawable/date_icon"
                    android:drawablePadding="5dp"
                    android:text="Created on"
                    android:id="@+id/txtewCLDate"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:drawableLeft="@drawable/call_type"
                    android:drawablePadding="5dp"
                    android:text="Enquiry"
                    android:gravity="center_vertical"
                    android:id="@+id/txtewCLenquiry"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#898989"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.10"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:padding="5dp"
                    android:drawableLeft="@drawable/other_details"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="DETAILS"
                    android:gravity="center"
                    android:id="@+id/txtewCLdetailsbtn"
                    android:layout_weight=".7"
                    android:background="@color/list_bg"
                    />
                <TextView
                    android:drawableLeft="@drawable/close_icon"
                    android:padding="5dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="CLOSE CASE"
                    android:gravity="center"
                    android:id="@+id/txtewCLclosecasebtn"
                    android:layout_weight=".7"
                    android:background="@color/list_bg"
                    />
            </LinearLayout>

        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#898989"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

    </LinearLayout>
</ScrollView>