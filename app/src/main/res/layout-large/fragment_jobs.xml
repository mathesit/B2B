<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.75">
            <EditText
                android:id="@+id/edtSearchInJobs"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:hint="@string/search"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listInJobs"
                android:dividerHeight="1dp"
                android:background="@color/list_bg">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/blue_txt">
                <TextView
                    android:id="@+id/txtJobDetailsInJobs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/jobDetails"
                    android:textSize="@dimen/textsize_large"
                    android:textColor="@color/blue_txt"
                    android:layout_margin="1dp"/>
                <TextView
                    android:id="@+id/txtUpdateJobsInJobs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize_large"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textColor="@color/blue_txt"
                    android:text="@string/updateJobs"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearDetailInJobs">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>