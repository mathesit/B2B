<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/titleBarMain"
        layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/titleBarMain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.75">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/linear1InMain"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/menubg"
                        android:onClick="showDashboard">
                        <ImageView
                            android:id="@+id/imgDashboardInMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dashboard"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard"
                            android:textSize="@dimen/textsize_normal"
                            android:gravity="top|center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear2InMain"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear1InMain"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:onClick="showServReq"
                        android:background="@drawable/menubg">
                        <ImageView
                            android:id="@+id/imgServReqInMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/servicereq"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/service_request"
                            android:textSize="@dimen/textsize_normal"
                            android:gravity="top|center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear3InMain"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear2InMain"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="showJobs"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/menubg">
                        <ImageView
                            android:id="@+id/imgJobsInMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/jobs"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/jobs"
                            android:textSize="@dimen/textsize_normal"
                            android:gravity="top|center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear4InMain"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear3InMain"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:onClick="showQuotation"
                        android:background="@drawable/menubg">
                        <ImageView
                            android:id="@+id/imgQuotationsInMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/quotation"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quotations"
                            android:textSize="@dimen/textsize_normal"
                            android:gravity="top|center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear5InMain"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/linear4InMain"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="showReports"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/menubg">
                        <ImageView
                            android:id="@+id/imgReportsInMain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/reports"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reports"
                            android:textSize="@dimen/textsize_normal"
                            android:gravity="top|center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearFragmentInMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.25">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>